<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/componentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/componentOverview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".70"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#669C004B"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                	android:layout_weight="0.80"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/component_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motherboard"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="von "
                            android:textColor="#FFF"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/component_producer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ASRock"
                            android:textColor="#FFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                
                <ImageView
                    android:id="@+id/showDetailsButtonComponent"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.20"
                    android:src="@drawable/detail_logo" />
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/componentDetailView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight=".30"
            android:background="#669C004B"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/actual_name_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Hauptplatine"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:textStyle="bold" />
			
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#CCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beschreibung:"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#444444" >

                    <TextView
                        android:id="@+id/actual_desc_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:text="bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla  bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla  "
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</merge>